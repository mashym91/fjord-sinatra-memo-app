<form action="/memos<%= @memo.empty? ? nil : "/#{@memo['id']}" %>" method="post" class="form-memo">
  <% unless @memo.empty? %>
    <input type="hidden" name='_method', value='PATCH' />
  <% end %>
  <div class="form-memo">
    <label for="title">タイトル: </label>
    <input type="text" name="title" id="title" value=<%= @memo['title'] %>>
  </div>
  <div class="form-memo">
    <label for="body">内容: </label>
    <textarea name="body" id="body"><%= @memo['body'] %></textarea>
  </div>
  <div class="form-memo">
    <input type="submit" value=<%= @memo.empty? ? "保存" : "更新" %>>
  </div>
</form>
